@model IEnumerable<MobileCenterApi.Models.TableContact>

@{
    ViewBag.Title = "ContactRecord";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">

            <h2>Contact Record</h2>


            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Mssg)
                    </th>
                    <th>Remove</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mssg)
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>


        </div>

    </div>

</div>
<a href="@Url.Action("Dashboard","Login")">Back to Dashboard</a>